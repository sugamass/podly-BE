# AWS Configuration
aws_region = "ap-northeast-1"

# Project Configuration
project_name = "podly"
environment  = "dev"

# API Keys (These should be set as environment variables or in terraform.tfvars)
# openai_api_key = "your-openai-api-key"
# tavily_api_key = "your-tavily-api-key"

# Lambda Packages (will be generated by build script)
lambda_packages = {
  create_script = {
    filename         = "../podly-lambda/dist/create-script.zip"
    source_code_hash = ""
  }
  create_preview_audio = {
    filename         = "../podly-lambda/dist/create-preview-audio.zip"
    source_code_hash = ""
  }
}

# CORS Configuration
cors_allow_origins = ["*"]
cors_allow_methods = ["GET", "POST", "OPTIONS"]
cors_allow_headers = ["Content-Type", "X-Amz-Date", "Authorization", "X-Api-Key", "X-Amz-Security-Token"] 