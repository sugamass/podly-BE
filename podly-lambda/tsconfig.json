{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
          "outDir": "./dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "moduleResolution": "node16",
      "sourceMap": true,
    "types": ["node", "aws-lambda"],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@podly/shared": ["shared/src/index.ts"],
      "@podly/shared/*": ["shared/src/*"]
    }
  },
  "include": [
    "functions/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist"
  ]
} 